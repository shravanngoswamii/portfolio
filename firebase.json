{
  "hosting": [
    {
      "site": "portfolio-shravangoswami",
      "public": ".",
      "redirects": [
        {
          "source": "/index.html",
          "destination": "/",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "/(contact|contacts|contact.html|contacts.html)",
          "destination": "/pages/contact.html"
        },
        {
          "source": "/(links|link|links.html|link.html)",
          "destination": "/pages/links.html"
        },
        {
          "source": "/(projects|project|project.html|projects.html)",
          "destination": "/pages/projects.html"
        },
        {
          "source": "/(skills|skill|skills.html|skill.html)",
          "destination": "/pages/skills.html"
        },
        {
          "source": "/(resume|resumes|resume.html|resumes.html)",
          "destination": "/pages/resume.html"
        }
      ],
      "ignore": [
        "firebase.json",
        ".firebaserc",
        "firestore.rules",
        "firestore.indexes.json",
        "package.json",
        "package-lock.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "site": "shravangoswami",
      "public": ".",
      "redirects": [
        {
          "source": "/index.html",
          "destination": "/",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "/(contact|contacts|contact.html|contacts.html)",
